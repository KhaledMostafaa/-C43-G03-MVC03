@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}
<h1>Employees</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Create"class="btn btn-primary">Create New Employee</a>
<br />
@if(Model.Count()>0)
{
    <table class="table-striped table-hover mt-4">
        <thead class=" text-center">
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Name)</th>
                <th>@Html.DisplayNameFor(E=>E.Email)</th>
                <th>@Html.DisplayNameFor(E=>E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E=>E.Age)</th>
                <th>@Html.DisplayNameFor(E=>E.Salary)</th>
                <th>@Html.DisplayNameFor(E=>E.IsActive)</th>
                <th>@Html.DisplayNameFor(E=>E.Gender )</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
         
        </thead>
        <tbody class="text-center">
            @foreach(var emp in Model)
            {
                <tr >
                     <th>@Html.DisplayNameFor(e=>emp.Name)</th>
                <th>@Html.DisplayFor(e=>emp.Email)</th>
                <th>@Html.DisplayFor(e=>emp.EmployeeType)</th>
                <th>@Html.DisplayFor(e=>emp.Age)</th>
                <th>@Html.DisplayFor(e=>emp.Salary)</th>
                <th>@Html.DisplayFor(e=>emp.IsActive)</th>
                <th>@Html.DisplayFor(e=>emp.Gender )</th>
                    <td>
                        <a asp-action="Details"asp-route-id="@emp.Id"class="btn btn-warning">
                           <i class="fas fa-eye"></i> Details

                        </a>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.Id"class="btn btn-success">
                            <i class="fas fa-edit"></i>Update

                        </a>
                    </td>

                    <td>
                      @*   <a  asp-action="Delete" asp-route-id="@emp.Id"class="btn btn-danger">
                            <i class="fas fa-trach"></i>Delete

                        </a> *@
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#DeleteEmployee">
                        <i class="fas fa-edit"></i>Delete
                    
                       </button
                    </td>
                </tr>
                <!-- Modal -->
<div class="modal fade" id="DeleteEmployee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...<h4 class="modal-title fs-5" id="exampleModalLabel">Are U Sure to Delete Employee: @emp.Name ?</h4>
      </div>
      <div class="modal-footer">
           <form asp-action="Delete"asp-route-Empid="@emp.Id" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mt-4">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>        </div> 
            <input type="submit" value="Delete" class="btn btn-danger">
  
    </form>
      
      </div>
    </div>
  </div>
</div>


            }
        </tbody>


    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h3>there is no Employees</h3>
    </div>
}

